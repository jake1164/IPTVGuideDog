{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Web GUI (HTTP)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-web",
      "program": "${workspaceFolder}/src/IPTVGuideDog.Web/bin/Debug/net10.0/IPTVGuideDog.Web.dll",
      "cwd": "${workspaceFolder}/src/IPTVGuideDog.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5283"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https?://\\S+:([0-9]+)",
        "uriFormat": "http://localhost:%s/"
      }
    },
    {
      "name": "Debug CLI - Run Command",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/IPTVGuideDog.Cli/bin/Debug/net10.0/iptv.dll",
      "args": [
        "run",
        "--config",
        ".config/config.yaml",
        "--profile",
        "default",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug CLI - Groups Command",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/IPTVGuideDog.Cli/bin/Debug/net10.0/iptv.dll",
      "args": [
        "groups",
        "--config",
        ".config/config.yaml",
        "--profile",
        "default",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug CLI - Version",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/IPTVGuideDog.Cli/bin/Debug/net10.0/iptv.dll",
      "args": ["--version"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Containers: Debug Web GUI (Docker)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "netCore",
      "netCore": {
        "appProject": "${workspaceFolder}/src/IPTVGuideDog.Web/IPTVGuideDog.Web.csproj"
      },
      "dockerServerReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https?://\\S+:([0-9]+)",
        "uriFormat": "http://localhost:%s/"
      }
    }
  ]
}
