@page "/setup"
@using IPTVGuideDog.Web.Configuration
@inject Microsoft.Extensions.Options.IOptionsSnapshot<SocketHostOptions> Options

<PageTitle>Socket Host</PageTitle>

<MudPaper Class="pa-6" Elevation="1">
    <MudText Typo="Typo.h5" Class="mb-2">Socket Host Configuration</MudText>
    <MudText Typo="Typo.body2">Confirm the playlist bridge endpoint exposed to Threadfin, Jellyfin, Plex, and other consumers.</MudText>
</MudPaper>

<MudPaper Class="pa-4 mt-6" Elevation="1">
    <MudStack Spacing="1">
        <MudText Typo="Typo.caption">Base Address</MudText>
        <MudText Typo="Typo.body1">@Options.Value.BaseAddress</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.caption">Playlist Path</MudText>
        <MudText Typo="Typo.body1">@Options.Value.PlaylistPath</MudText>
    </MudStack>
    <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-4">
        Editing and persistence will be added in a future iteration. Set values via configuration for now.
    </MudAlert>
</MudPaper>
