@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="_drawerOpen" Anchor="Anchor.Start" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">IPTV Guide Dog</MudText>
        </MudDrawerHeader>
        <NavMenu OnNavigate="CloseDrawer" />
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Elevation="0">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
            <MudText Typo="Typo.h6" Class="ms-2">Playlist Orchestrator</MudText>
            <MudSpacer />
            <LoginDisplay />
        </MudAppBar>

        <MudContainer MaxWidth="MaxWidth.False" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen;

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;

    private Task CloseDrawer()
    {
        _drawerOpen = false;
        return Task.CompletedTask;
    }
}
