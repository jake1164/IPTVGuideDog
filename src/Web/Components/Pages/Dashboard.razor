@page "/"
@using IPTVGuideDog.Web.Application
@inject ChannelWorkspaceState Workspace

<PageTitle>Dashboard</PageTitle>

<MudPaper Class="pa-6" Elevation="1">
    <MudText Typo="Typo.h4" Class="mb-2">IPTV Guide Dog</MudText>
    <MudText Typo="Typo.subtitle1">An authenticated workspace for trimming IPTV playlists before they reach your media servers.</MudText>
</MudPaper>

<MudGrid Class="mt-4" Spacing="3">
    <MudItem xs="12" md="6" lg="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.overline">Selected Groups</MudText>
            <MudText Typo="Typo.h5">@Workspace.SelectedGroups.Count</MudText>
            <MudText Typo="Typo.caption">Groups currently enabled for downstream clients.</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" lg="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.overline">Channels Remaining</MudText>
            <MudSkeleton Height="32px" Width="80px" Animation="Animation.Wave" />
            <MudText Typo="Typo.caption">Channel counts will surface once indexers are connected.</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" lg="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.overline">Last Sync</MudText>
            <MudText Typo="Typo.body1">Not yet scheduled</MudText>
            <MudText Typo="Typo.caption">Configure provider access to begin polling.</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>
